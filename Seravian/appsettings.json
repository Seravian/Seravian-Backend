{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "*"
    ]
  },
  "AllowedHosts": "*",
  "Otp": {
    "ExpiryMinutes": 10,
    "MinimumRemainingMinutesToResend": 5,
    "OtpLength": 8
  },
  "AIAudioResponsesCleanup": {
    "AudioFolder": "chat-voice-mode-ai-responses",
    "CleanupCutoffMinutes": 20,
    "DelayMinutes": 1
  },
  "AudioPaths": {
    "AIOutputFolder": "chat-voice-mode-ai-responses",
    "UserUploadFolder": "chat-voice-mode-user-uploads"
  }
}